<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="container", align="center">
   <h2>Iniciar sesión</h2> <br>
   <div class="field form-group">
      <%= f.email_field :email, class:"form-control-sm", placeholder:"Email", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field form-group">
      <%= f.password_field :password, class:"form-control-sm", placeholder:"Password", autocomplete: "current-password" %>
      </div>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :recuérdame %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Iniciar sesión", class:"btn btn-success" %>
  </div> <br>
  <%= render "devise/shared/links" %>
<% end %>
</div>
