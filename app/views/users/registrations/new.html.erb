<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="container", align="center">
  <h2>Registrarte</h2> <br>

  <div class="field form-group">
    <%= f.text_field :name, class:"form-control w-25", autofocus: true, autocomplete: "name", placeholder: "Nombre" %>
  </div>

  <div class="field form-group">
    <%= f.email_field :email, class:"form-control w-25", autocomplete: "email", placeholder: "Email" %>
  </div>
   
  <div class="field form-group">
    <% if @minimum_password_length %>
    <%= f.password_field :password, class:"form-control w-25", autocomplete: "new-password", placeholder:"Contraseña (#{@minimum_password_length} caracteres mínimo)"%>
    <% else %>
    <%= f.password_field :password, class:"form-control w-25", autocomplete: "new-password", placeholder:"Contraseña"%>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, class:"form-control w-25", autocomplete: "new-password", placeholder:"Confirmar contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarte", class:"btn btn-success"%>
  </div>
<% end %> <br>
<%= render "devise/shared/links" %>
</div>
<br><br><br><br>

