<br><br><br><br><br>
<div class="container">
<h2>Editar usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :name %>
    <%= f.text_field :name, class:"form-control w-25", autofocus: true, autocomplete: "name", placeholder:"Nombre" %>
  </div>
  <div class="field form-group">
    <% f.label :email %>
    <%= f.email_field :email, class:"form-control w-25", autocomplete: "email", placeholder:"Email" %>
  </div>
  <div class="field form-group">
    <% f.label :phone %>
    <%= f.text_field :phone, class:"form-control w-25", autocomplete: "phone", placeholder:"Teléfono" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :contraseña %> <i>(dejar en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, class:"form-control w-25", autocomplete: "new-password", placeholder:"Nueva contraseña" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :confirmación_contraseña %><br />
    <%= f.password_field :password_confirmation, class:"form-control w-25", autocomplete: "new-password", placeholder:"Confirmar nueva contraseña" %>
  </div>

  <div class="field form-group">
    <%= f.label :contraseña_actual %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, class:"form-control w-25", autocomplete: "current-password", placeholder:"Contraseña actual" %>
    <br>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class:"btn btn-secondary" %>
    <%= link_to "Volver", :back, class:"btn btn-dark" %>
  </div>
<% end %>
<br><br> 
<p>No estás conforme? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
</div>

