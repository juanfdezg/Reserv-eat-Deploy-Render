<%= form_with model: [@restaurant, Table.new] do |form| %>
<div class="container">
<h1>Nueva mesa</h1><br>
<form><% if Table.new.errors.any? %>
    <h2>Errors:</h2>
    <ul><% Table.new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="form-group row">
    <label for="inputUsername" class="col-sm-2 col-form-label"><%= form.label :'Nombre restaurant' %></label>
    <div class="col-sm-10">
      <%= form.text_field :'nombre_restaurant', class:"form-control w-25", placeholder:"Restaurant name", value: @restaurant.name, readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputTableID" class="col-sm-2 col-form-label"><%= form.label :Capacidad %></label>
    <div class="col-sm-10">
      <%= form.select(:capacidad, [1,2,3,4,5,6,7,8]) %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputUbicacion" class="col-sm-2 col-form-label"><%= form.label :Ubicación %></label>
    <div class="col-sm-10">
      <%= form.select(:ubicacion, ["Afuera", "Adentro"]) %>
    </div>
  </div>
 

  <div class="form-group row">
    <label for="inputFumadores" class="col-sm-2 col-form-label"><%= form.label 'Área fumadores' %></label>
    <div class="col-sm-10">
      <%= form.select(:fumador, [["Si", true], ["No", false]]) %>
    </div>
  </div> 

    <div>
        <%= form.submit "Crear mesa", class:"btn btn-secondary" %>
        <%= link_to 'Volver', restaurants_path(anchor: 'portfolio'), class:"btn btn-dark" %>
    </div>
</form>
</div>
<% end %>
